# Add Homebrew-installed zsh completion functions to fpath
fpath=(/opt/homebrew/share/zsh/site-functions $fpath)

# Nicer completion
zstyle ':completion:*' menu select
zstyle ':completion:*' matcher-list 'm:{a-zA-Z}={A-Za-z}'

# Sane zsh completion without OMZ
autoload -Uz compinit
compinit -C -d "$HOME/.zcompdump"

# Make history useful
HISTFILE="$HOME/.zsh_history"
HISTSIZE=100000
SAVEHIST=100000
setopt SHARE_HISTORY
setopt HIST_IGNORE_ALL_DUPS
setopt HIST_REDUCE_BLANKS
setopt HIST_IGNORE_SPACE
setopt EXTENDED_HISTORY

# Change directories without typing `cd`
setopt autocd

# Make less not suck
export LESS='-R'
export LESSHISTFILE='-'

# Local scripts
export PATH="$HOME/.local/bin:$PATH"

# Preferred editor
export EDITOR="micro"
export VISUAL="micro"

# mise
eval "$(mise activate zsh)"

# starship
eval "$(starship init zsh)"

# zoxide
eval "$(zoxide init zsh)"

# fzf (Homebrew)
if command -v fzf >/dev/null 2>&1; then
  source <(fzf --zsh)
fi

# Custom Tailscale Alias
# This provides a permanent shortcut to the Tailscale CLI embedded in the GUI app.
alias tailscale='/Applications/Tailscale.app/Contents/MacOS/Tailscale'

# exif Alias
# Keeps my image file naming consistent
alias exif='exiftool "-FileName<CreateDate" -d "%Y-%m-%d_%H-%M-%S-%%f.%%e"'

# ls Aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias g='git'

# go home
alias home='cd ~'

# reload shell
alias reload='source "$HOME/.zshrc"'
